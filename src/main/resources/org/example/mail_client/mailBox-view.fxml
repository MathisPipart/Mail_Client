<?import javafx.scene.text.TextFlow?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mail_client.controller.MailBoxController">
   <VBox fillWidth="false">
      <children>
         <HBox alignment="CENTER" prefHeight="26.0" prefWidth="1000.0">
            <children>
               <Label fx:id="mailName" alignment="CENTER" prefHeight="26.0" prefWidth="212.0">
                  <HBox.margin>
                     <Insets left="340.0" />
                  </HBox.margin>
                  <font>
                     <Font name="System Bold" size="14.0" />
                  </font>
               </Label>
               <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#openNewMailStage" prefHeight="25.0" prefWidth="81.0" text="New Mail">
                  <HBox.margin>
                     <Insets left="320.0" />
                  </HBox.margin>
               </Button>
            </children>
            <VBox.margin>
               <Insets left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
         </HBox>
      
         <Label fx:id="welcomeText" />
      </children>
   </VBox>
   <BorderPane prefHeight="800.0">
      <left>
         <TableView fx:id="emailTable" prefHeight="747.0" prefWidth="400.0" BorderPane.alignment="CENTER">
           <columns>
             <TableColumn fx:id="emailColumn" maxWidth="400.0" prefWidth="400.0" resizable="false" text="Your mails" />
           </columns>
         </TableView>
      </left>
      <center>
         <TitledPane collapsible="false" prefHeight="748.0" prefWidth="497.0" text="My mail" BorderPane.alignment="TOP_CENTER">
            <content>
               <GridPane>
                 <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                 </columnConstraints>
                 <rowConstraints>
                   <RowConstraints maxHeight="244.33333672417535" minHeight="0.0" prefHeight="70.66667132907443" vgrow="NEVER" />
                   <RowConstraints maxHeight="657.5555390252007" minHeight="10.0" prefHeight="630.6666620042589" valignment="TOP" vgrow="SOMETIMES" />
                 </rowConstraints>
                  <children>
                     <VBox>
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                              <children>
                                 <Label text="From :">
                                    <font>
                                       <Font name="System Bold" size="12.0" />
                                    </font>
                                 </Label>
                                 <Label fx:id="selectedSenderLabel" text="test@gmail.com" />
                              </children>
                           </HBox>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                              <children>
                                 <Label text="To :">
                                    <font>
                                       <Font name="System Bold" size="12.0" />
                                    </font>
                                    <HBox.margin>
                                       <Insets bottom="10.0" />
                                    </HBox.margin>
                                 </Label>
                                 <Label fx:id="selectedReceiverLabel" text="receiver@gmail.com">
                                    <HBox.margin>
                                       <Insets bottom="10.0" />
                                    </HBox.margin>
                                 </Label>
                              </children>
                           </HBox>
                        </children>
                     </VBox>
                     <VBox GridPane.columnIndex="1">
                        <children>
                           <HBox alignment="CENTER" minWidth="289.33333333" prefHeight="100.0" prefWidth="200.0" spacing="24.0">
                              <children>
                                 <Button mnemonicParsing="false" text="Reply" />
                                 <Button mnemonicParsing="false" text="Reply All" />
                                 <Button mnemonicParsing="false" text="Forward" />
                                 <Button mnemonicParsing="false" text="Delete" />
                              </children>
                           </HBox>
                           <Label fx:id="selectedDateLabel" alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="289.0" text="Date">
                              <padding>
                                 <Insets bottom="15.0" top="5.0" />
                              </padding>
                              <VBox.margin>
                                 <Insets />
                              </VBox.margin>
                           </Label>
                        </children>
                     </VBox>
                     <VBox GridPane.columnSpan="2" GridPane.rowIndex="1">
                        <children>
                           <Label fx:id="selectedSubjectLabel" alignment="TOP_LEFT" prefHeight="39.0" prefWidth="771.0" text="Subject">
                              <font>
                                 <Font name="System Bold" size="12.0" />
                              </font>
                           </Label>
                           <TextFlow fx:id="selectedContentTextFlow" prefHeight="582.0" prefWidth="578.0" />
                        </children>
                        <padding>
                           <Insets top="10.0" />
                        </padding>
                     </VBox>
                  </children>
               </GridPane>
            </content>
         </TitledPane>
      </center></BorderPane>
</VBox>
